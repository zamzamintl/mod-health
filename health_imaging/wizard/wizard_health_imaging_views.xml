<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Request - Test -->
        <record id="gnuhealth_request_imaging_test_form_view" model="ir.ui.view">
            <field name="name">gnuhealth.request.imaging.test.form</field>
            <field name="model">gnuhealth.request.imaging.test</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Wizard Request - Test">
                            <field name="request" />
                            <field name="test" />
                        </group>
                        <footer>
                            <button name="action_done" type="object"
                                    string="Requested" class="oe_highlight"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Request Patient Imaging Test Start -->
        <record id="gnuhealth_patient_imaging_test_request_start_form_view" model="ir.ui.view">
            <field name="name">gnuhealth.patient.imaging.test.request.start.form</field>
            <field name="model">gnuhealth.patient.imaging.test.request.start</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Wizard Request Patient Imaging Test Start">
                            <field name="date" />
                            <field name="patient" />
                            <field name="doctor" />
                            <field name="tests" />
                            <field name="urgent" />
                        </group>
                        <footer>
                            <button name="action_done" type="object"
                                    string="Start Request" class="oe_highlight"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
