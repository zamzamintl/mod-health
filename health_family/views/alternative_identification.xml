<odoo>
	<record model="ir.ui.view" id="medical.person_alternative_identification_form">
		<field name="name">medical.person.alternative.identification.form</field>
		<field name="model">medical.person.alternative.identification</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form>
				<label string ="." for="code"/>
				<field name="code"/>
				<label string ="." for="alternative_id_type"/>
				<field name="alternative_id_type"/>
				<label string ="." for="comments"/>
				<field name="comments"/>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="medical.person_alternative_identification_tree">
		<field name="name">medical.alternative.identification.tree</field>
		<field name="model">medical.person.alternative.identification</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree editable="top">
				<field name="code"/>
				<field name="alternative_id_type"/>
				<field name="comments"/>
			</tree>
		</field>
	</record>
</odoo>
