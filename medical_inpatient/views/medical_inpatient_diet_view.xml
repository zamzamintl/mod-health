<odoo>
    <data>
        <record id="medical_inpatient_diet_form_view" model="ir.ui.view">
            <field name="name">medical.inpatient.diet.form.view</field>
            <field name="model">medical.inpatient.diet</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="diet"/>
                            <newline/>
                            <field colspan="4" name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="medical_inpatient_diet_tree_view" model="ir.ui.view">
            <field name="name">medical.inpatient.diet.tree.view</field>
            <field name="model">medical.inpatient.diet</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="diet"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

