<odoo>
    <data>
        <record id="medical_inpatient_medication_admin_time_form_view" model="ir.ui.view">
            <field name="name">medical.inpatient.medication.admin_time.form.view</field>
            <field name="model">medical.inpatient.medication.admin_time</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="admin_time"/>
                        <field name="admin_time"/>
                        <label for="dose"/>
                        <field name="dose"/>
                        <label for="dose_unit"/>
                        <field name="dose_unit"/>
                        <label for="remarks"/>
                        <field name="remarks"/>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="medical_inpatient_medication_admin_time_tree_view" model="ir.ui.view">
            <field name="name">medical.inpatient.medication.admin_time.tree.view</field>
            <field name="model">medical.inpatient.medication.admin_time</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="admin_time"/>
                    <field name="dose"/>
                    <field name="dose_unit"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

