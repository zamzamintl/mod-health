<odoo>
    <data>
        <record id="medical_inpatient_meal_order_item_form_view" model="ir.ui.view">
            <field name="name">medical.inpatient.meal.order.item.form.view</field>
            <field name="model">medical.inpatient.meal.order.item</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="meal"/>
                        <field name="meal"/>
                        <label for="remarks"/>
                        <field name="remarks"/>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="medical_inpatient_meal_order_item_tree_view" model="ir.ui.view">
            <field name="name">medical.inpatient.meal.order.item.tree.view</field>
            <field name="model">medical.inpatient.meal.order.item</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="meal"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

