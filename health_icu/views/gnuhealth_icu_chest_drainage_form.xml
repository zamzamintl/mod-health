<odoo>

    <record id="gnuhealth_icu_chest_drainage_form_view" model="ir.ui.view">
        <field name="name">gnuhealth.icu.chest.drainage.form.view</field>
        <field name="model">gnuhealth.icu.chest.drainage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="" col="4">
                        <field name="location"/>
                        <field name="suction"/>
                        <field name="suction_pressure"/>
                        <field name="fluid_volume"/>
                        <field name="fluid_aspect"/>
                        <field name="oscillation"/>
                        <field name="air_leak"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
