<odoo>
    <record id="gnuhealth_icu_glasgow_form_view" model="ir.ui.view">
        <field name="name">gnuhealth.icu.glasgow.form.view</field>
        <field name="model">gnuhealth.icu.glasgow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <field name="name"
                               options="{'no_create': True}"
                               attrs="{'no_create': True}"/>
                        <field name="evaluation_date"/>
                    </group>
                    <newline/>
                    <group id="group_glasgow_header" col="4">
                        <field name="glasgow_eyes"/>
                        <field name="glasgow_verbal"/>
                        <field name="glasgow_motor"/>
                        <field name="glasgow"/>
                        <field name="glasgow_score"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
